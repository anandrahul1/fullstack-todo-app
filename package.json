  "keywords": [
    "todo",
    "express",
    "fullstack",
    "javascript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^30.1.1",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "nodemon": "^3.0.1",
    "puppeteer": "^24.17.0",
    "supertest": "^6.3.3"
  }
}