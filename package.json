{
  "name": "fullstack-todo-app",
  "version": "1.0.0",
  "description": "A fullstack todo application with Node.js Express backend and vanilla JavaScript frontend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/backend/unit",
    "test:integration": "jest tests/backend/integration tests/integration",
    "test:frontend": "jest tests/frontend",
    "test:e2e": "jest tests/e2e",
    "test:all": "jest --runInBand"
